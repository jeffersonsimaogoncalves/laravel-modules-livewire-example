<?php

namespace [namespace];

use Livewire\Component;

class [class] extends Component
{
    public $type = 'text';

    public $name;

    public $required;

    public function render()
    {
        return <<<'blade'
            <div>
                <input type="{{ $type }}" class="form-control" name="{{ $name }}" id="{{ $name }}" {{ $required ? 'required' : '' }} />
            </div>
        blade;
    }
}
